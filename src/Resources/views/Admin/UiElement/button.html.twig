{#
    UI Element template
    type: button_link
    element fields :
        label
        link
        align
#}
{% set align = element.align is defined and element.align is not empty ? element.align : 'center' %}
<p style="text-align: {{align}};">
    <a href="{{ element.link }}" class="ui primary button massive">{{ element.label }}</a>
</p>
