<script type="text/javascript">
    // Manage carousel because with Sylius you can have only one
    $( document ).ready(function() {
        $('.carousel-content').each(function() {
            let carousel = $(this);
            carousel.slick({
                infinite: true,
                slidesToShow: 3,
                slidesToScroll: 1,
                prevArrow: carousel.parent().find('.carousel-left'),
                nextArrow: carousel.parent().find('.carousel-right'),
                appendArrows: false
            });
        });
    });
</script>
