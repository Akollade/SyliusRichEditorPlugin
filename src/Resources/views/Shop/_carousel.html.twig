{% set products = products.query.result %}
{% set number_of_products = app.request.attributes.get('count') %}
{% set products = products|slice(0, number_of_products) %}

{#<div class="ui center aligned huge header">{{ taxon.name }}</div>#}
<div class="ui hidden divider"></div>

{% if products|length > 0 %}
    <div class="carousel-wrapper">
        <div class="carousel">
            {% for product in products %}
                <div class="carousel-item">
                    {% include '@SyliusShop/Product/_box.html.twig' %}
                </div>
            {% endfor %}
        </div>

        <div class="carousel-nav">
            <button class="carousel-left ui huge black icon button">
                <i class="left arrow icon"></i>
            </button>
            <button class="carousel-right ui huge black icon button">
                <i class="right arrow icon"></i>
            </button>
        </div>
    </div>
{% endif %}
