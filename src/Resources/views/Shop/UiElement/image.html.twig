{#
    UI Element template
    type: image
    element fields :
        image
        alt
        title
        link
#}
{% if element.image is defined %}
<p>
    {% if element.link is not empty %}
        <a href="{{ element.link }}">
            <img class="ui fluid image" src="{{ element.image }}" alt="{{ element.alt|default('') }}" title="{{ element.title|default('') }}" />
        </a>
    {% else %}
        <img class="ui fluid image" src="{{ element.image }}" alt="{{ element.alt|default('') }}" title="{{ element.title|default('') }}" />
    {% endif %}
</p>
{% endif %}
